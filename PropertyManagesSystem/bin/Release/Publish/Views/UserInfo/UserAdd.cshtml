
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddIndex</title>
    <link href="~/Content/Home/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Content/Home/layui/layui.js"></script>
    <script src="~/Content/Home/myjs/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div class="layui-col-md8">
        <form class="layui-form layui-form-pane" lay-filter="form_add" action="/UserInfo/Add" method="post">
            <div class="layui-form-item">
                <label class="layui-form-label">业主账号</label>
                <div class="layui-input-inline">
                    <input type="text" name="UserID" lay-verify="required|isrepeat" placeholder="请输入" class="layui-input">
                </div>
                <label class="layui-form-label">业主名字</label>
                <div class="layui-input-inline">
                    <input type="text" name="Name" lay-verify="required" placeholder="请输入" class="layui-input">
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">手机号码</label>
                <div class="layui-input-inline">
                    <input type="text" name="Phone" lay-verify="required|phone" placeholder="请输入" class="layui-input">
                </div>
                <label class="layui-form-label">身份编号</label>
                <div class="layui-input-inline ">
                    <input type="text" name="IDNumber" lay-verify="required|identity" placeholder="请输入" class="layui-input">
                </div>
            </div>

            <div class="layui-form-item">
                @*<label class="layui-form-label">性别</label>
        <div class="layui-input-inline ">
            <select name="Sex">
                <option value=0 selected="selected">男</option>
                <option value=1>女</option>
            </select>
        </div>*@
                <label class="layui-form-label">性别</label>
                <div class="layui-input-inline">
                    <input type="radio" name="Sex" value="0" title="男" checked="" id="sexRadio1">
                    <input type="radio" name="Sex" value="1" title="女" id="sexRadio2">
                </div>
                <label class="layui-form-label">房屋编号</label>
                <div class="layui-input-inline ">
                    <select name="HousID" id="HousID">
                        @foreach (var item in @ViewBag.houseInfo)
                        {
                            <option value=@item.HousID>@item.HousID (@item.Purpose)</option>
                        }
                    </select>
                </div>
            </div>


                <div class="layui-form-item" style="text-align:center">
                    <button class="layui-btn" lay-submit="" lay-filter="btn_add"><i class="layui-icon layui-icon-ok"></i> 确认添加</button>
                </div>
        </form>
    </div>

    <script>
        //使用layui的form模块
        layui.use(['form'], function () {
            var form = layui.form//实例化


            //自定义验证规则-->value就是文本框里的值
            form.verify({
                maxlength: function (value) {
                    if (value.length > 16) {
                        return '不能超过16个字符';
                    }
                }
                //判断业主账号是否存在
                , isrepeat: function (value) {
                    debugger;
                    var callbackdata;
                    $.ajax({
                        url: "/UserInfo/CheckRepeat",
                        type: "post",
                        async: false,//同步-保证验证通过之后，才执行表单的提交
                        data: {
                            value: value
                        },
                        success: function (data) {
                            callbackdata = data;

                        }
                    });
                    if (callbackdata == "no") {
                        return ("同一业主名的信息已存在，请添加其他业主信息！");
                    }
                }
            });
        });
    </script>
</body>
</html>
