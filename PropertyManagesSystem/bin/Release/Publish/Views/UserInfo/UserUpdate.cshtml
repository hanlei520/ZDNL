
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateIndex</title>
    <link href="~/Content/Home/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Content/Home/layui/layui.js"></script>
    <script src="~/Content/Home/myjs/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div class="layui-col-md8">
        <form class="layui-form layui-form-pane" lay-filter="form_add" action="/UserInfo/Update" method="post">
            <div class="layui-form-item">
                <label class="layui-form-label">业主账号</label>
                <div class="layui-input-inline">
                    <input type="text" name="UserID" lay-verify="required" placeholder="请输入" class="layui-input" value="@ViewBag.model.UserID" readonly="readonly" style="color:red">
                </div>
                <label class="layui-form-label">业主名字</label>
                <div class="layui-input-inline">
                    <input type="text" name="Name" lay-verify="required" placeholder="请输入" class="layui-input" value="@ViewBag.model.Name">
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">手机号码</label>
                <div class="layui-input-inline">
                    <input type="text" name="Phone" lay-verify="required|phone" placeholder="请输入" class="layui-input" value="@ViewBag.model.Phone">
                </div>
                <label class="layui-form-label">身份编号</label>
                <div class="layui-input-inline ">
                    <input type="text" name="IDNumber" lay-verify="identity" placeholder="请输入" class="layui-input" value="@ViewBag.model.IDNumber">
                </div>
            </div>

            <div class="layui-form-item">
                @*<label class="layui-form-label">性别</label>
                    <div class="layui-input-inline ">
                        <select name="Sex" id="sexid">
                            <option value=0 selected="selected">男</option>
                            <option value=1>女</option>
                        </select>
                    </div>*@
                <label class="layui-form-label">性别</label>
                <div class="layui-input-inline">
                    <input type="radio" name="Sex" value="0" title="男" checked="" id="sexRadio1">
                    <input type="radio" name="Sex" value="1" title="女" id="sexRadio2">
                </div>
                @if (string.IsNullOrEmpty(@ViewBag.model.HousID))
                {
                    <label class="layui-form-label">房屋编号</label>
                    <div class="layui-input-inline ">
                        <select name="HousID" id="Housid" lay-verify="required">
                            <option value="">请选择</option>
                            @foreach (var item in @ViewBag.houseInfo)
                            {
                                <option value=@item.HousID>@item.HousID (@item.Purpose)</option>
                            }
                        </select>
                    </div>
                }

            </div>



            <div class="layui-form-item" style="text-align:center">
                <button class="layui-btn" lay-submit="" lay-filter="btn_add"><i class="layui-icon layui-icon-ok"></i> 确认修改</button>
            </div>
        </form>
    </div>

    <script>

        //使用jq给下拉框赋值
        //$('#sexid').val(@ViewBag.model.Sex);
        //动态设置单选框的选中
    debugger
    if (@ViewBag.model.Sex == 1) {
        $("#sexRadio1").prop("checked", false);
        $("#sexRadio2").prop("checked", true);
    }
    debugger
    if (@ViewBag.model.Sex == 0) {
        $("#sexRadio1").prop("checked", true);
        $("#sexRadio2").prop("checked", false);
            }
        //$('#Housid').val('@ViewBag.model.HousID');


        //使用layui的form模块
        layui.use(['form'], function () {
            var form = layui.form//实例化



        });
    </script>

</body>
</html>
