
<div class="layui-col-md8">
    <form class="layui-form layui-form-pane" lay-filter="form_add" action="/User_UserInfo/UserUpdate" method="post">
        <div class="layui-form-item">
            <label class="layui-form-label">业主账号</label>
            <div class="layui-input-inline">
                <input type="text" name="UserID" lay-verify="required" placeholder="请输入" class="layui-input" value="@ViewBag.model.UserID" readonly="readonly" style="color:red">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">业主名字</label>
            <div class="layui-input-inline">
                <input type="text" name="Name" lay-verify="required" placeholder="请输入" class="layui-input" value="@ViewBag.model.Name">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">手机号码</label>
            <div class="layui-input-inline">
                <input type="text" name="Phone" lay-verify="required|phone" placeholder="请输入" class="layui-input" value="@ViewBag.model.Phone">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">身份编号</label>
            <div class="layui-input-inline ">
                <input type="text" name="IDNumber" lay-verify="required|identity" placeholder="请输入" class="layui-input" value="@ViewBag.model.IDNumber">
            </div>
        </div>


        <div class="layui-form-item">
            <label class="layui-form-label">性别</label>
            <div class="layui-input-inline ">
                <select name="Sex" id="sexid">
                    <option value=0>男</option>
                    <option value=1>女</option>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">房屋编号</label>
            <div class="layui-input-inline ">
                <input type="text" name="HousID" lay-verify="required" placeholder="请输入" class="layui-input" value="@ViewBag.model.HousID" readonly="readonly"style="color:red">
            </div>
        </div>


        <div class="layui-form-item">
            <button class="layui-btn" style="margin-left:100px;" lay-submit="" lay-filter="btn_Update"><i class="layui-icon layui-icon-ok"></i> 确认修改</button>
        </div>
    </form>
</div>
