<script>

    //使用layui的table模块
    //使用layui的table模块
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form;
        var layedit = layui.layedit;
        var laydate = layui.laydate;
        //日期
        laydate.render({
            elem: '#date1'
        });
        laydate.render({
            elem: '#date2'
        });
        form.render();
    });
    var table;

    layui.use('table', function () {
        //实例化layui的table模块
        table = layui.table;

        //渲染表格
        table.render({
            elem: '#test'//把表格渲染在id为test的标签中
            , url: '/User_ComplaInfo/UserGetComplaInfo'//数据接口，即后台地址
            , toolbar: '#toolbarDemo' //开启头部工具栏，并为其绑定左侧模板

            , title: '我的投诉建议'

            , cols: [[
                { type: 'checkbox', fixed: 'left' }
                , { field: 'ID', title: 'ID', width: 80, fixed: 'left', unresize: true, sort: true }
                , { field: 'ComplaID', title: '投诉编号', sort: true }
                , { field: 'CompType', title: '投诉类型' ,templet: '#TypeTpl'}
                , { field: 'HousID', title: '房屋编号', sort: true }
                , { field: 'UserName', title: '业主姓名', sort: true }
                , { field: 'Phone', title: '投诉电话' }
                , { field: 'Contents', title: '投诉内容' }
                , { field: 'RsubmitData', title: '提交日期', sort: true }
                , { field: 'RsolveData', title: '解决日期', sort: true }
                , { field: 'State', title: '状态', templet: '#stateTpl' }
                , { field: 'AdminName', title: '操作员' }
                , { field: 'Remarks', title: '备注' }
            ]]
            , page: true//是否开启分页
        });

        //头工具栏事件
        table.on('toolbar(test)', function (obj) {

            var checkStatus = table.checkStatus(obj.config.id);
            switch (obj.event) {
                case 'btn_Add':
                    //添加用户信息
                    //iframe 窗--弹出添加窗体
                    layer.open({
                        type: 2,   //iframe
                        title: '投诉信息添加',
                        shade: 0.6,  //遮罩
                        area: ['700px', '450px'],
                        content: '/User_ComplaInfo/User_ComplaAdd',//页面地址
                        cancel: function (index) {
                            //关闭窗口
                            layer.close(index);
                            //重新加载表格
                            btn_search();
                        }
                    });
                    break;
                case 'btn_Update':
                    //获取选中的个数
                    if (checkStatus.data.length == 1) {
                        //获取选中的信息
                        var data = checkStatus.data;
                        //转成json格式的字符串
                        var strdata = JSON.stringify(data);
                        //转成json格式
                        var jsondata = JSON.parse(strdata);
                        //调用更新的方法
                        debugger;
                        var ComplaID = jsondata[0].ComplaID
                        var State = jsondata[0].State
                        if (State == 0) {
                            layer.alert("该订单已处理，无法修改");
                            return;
                        }
                        if (State == 1) {
                            layer.alert("该订单处理中，无法修改");
                            return;
                        }
                        if (State == 3) {
                            layer.alert("该订单已取消，无法修改");
                            return;
                        }

                        debugger
                        //iframe窗--弹出添加窗体
                        layer.open({
                            type: 2,//iframe
                            title: '修改投诉建议信息',
                            shade: 0.6,
                            area: ['700px', '450px'],
                            content: '/User_ComplaInfo/User_ComplaUpdate?ComplaID=' + ComplaID + '',//页面地址
                            cancel: function (index) {
                                //关闭窗口
                                layer.close(index);
                                //重新加载表格
                                btn_search();
                            }
                        });
                    } else {
                        layer.alert("必须选中且只能选中一条信息！");
                    }
                    break;
                    debugger;
                case 'btn_Cancel':
                    //获取选中的信息
                    var data = checkStatus.data;
                    if (data.length == 1) {
                        //转成json格式的字符串
                        var strdata = JSON.stringify(data);
                        //转成json对象
                        var jsondata = JSON.parse(strdata);
                        var State = jsondata[0].State
                        if (State == 3) {
                            layer.alert("该订单已取消！");
                            return;
                        }
                        //获取id
                        var id = jsondata[0].ID;
                        //执行取消-->调用取消方法
                        if (confirm("确定取消吗？")) {
                            btn_Cancel(id);
                        }
                    }
                    else {
                        layer.alert("必须选中且只能选中一条数据！");
                    }
                    break;
            };
        });
    });

    //查询
    btn_search = function () {
        //获取文本框的值
        debugger
        var RsubmitDate = $("#date1").val();
        var EndDate = $("#date2").val();
        if (RsubmitDate == "" && EndDate != "") {
            layer.alert('请选择开始时间！');
            return false;
        }
        if (EndDate == "" && RsubmitDate != "") {
            layer.alert('请选择结束时间！');
            return false;
        }
        if (RsubmitDate != '' && EndDate != '') {
            if (RsubmitDate > EndDate) {
                layer.alert('结束时间不能小于开始时间！');
                return false;
            }
        }
        var State = $("#State").val();
        var CompType = $("#CompType").val();
        //把文本框的值通过layui table的reload重新传给后台并重新加载表格
        table.reload('test', {
            url: '/User_ComplaInfo/UserGetComplaInfo',
            page: {
                curr: 1//从第一页开始
            },
            where: {
                RsubmitDate: RsubmitDate,
                EndDate: EndDate,
                CompType: CompType,
                State: State,//设定异步数据接口的额外参数
            }
        });
    };
    //取消方法
    btn_Cancel = function (ID) {
        debugger
        $.ajax({
            type: 'post',
            url: '/User_ComplaInfo/Cancel',
            data: {
                id: ID,
            },
            success: function (data) {

                if (data == "ok") {
                    layer.alert("取消成功！");
                    //重新加载表示
                    btn_search();
                }
                else {
                    layer.alert("取消失败！");
                }
            }
        });
    };
</script>
