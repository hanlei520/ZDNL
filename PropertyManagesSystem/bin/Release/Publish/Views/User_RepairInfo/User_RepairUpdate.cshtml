
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateIndex</title>
    <script src="~/Content/Home/myjs/jquery-1.10.2.min.js"></script>
    <script src="~/Content/Home/layui/layui.js"></script>
    <link href="~/Content/Home/layui/css/layui.css" rel="stylesheet" media="all" />
</head>
<body>
    <div class="layui-col-md8">
        <form class="layui-form layui-form-pane" lay-filter="form_add" action="/User_RepairInfo/Update" method="post">
            <div class="layui-form-item">
                <label class="layui-form-label">报修编号</label>
                <div class="layui-input-inline ">
                    <input type="text" name="RepairID" lay-verify="required" class="layui-input" value="@ViewBag.model.RepairID" style="color:red;" readonly="readonly">
                </div>
               
                <label class="layui-form-label">联系电话</label>
                <div class="layui-input-inline ">
                    <input type="text" name="Phone" lay-verify="required|Phone" class="layui-input" value="@ViewBag.model.Phone">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">详细信息</label>
                <div class="layui-input-inline ">
                    <textarea class="layui-input" name="Rreason" id="RreasonID" lay-verify="required" style="height:100px; width:500px;" placeholder="请填写内容">@ViewBag.model.Rreason</textarea>
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">备注</label>
                <div class="layui-input-inline ">
                    <textarea class="layui-input" name="Remarks" id="RemarksID" style="height:100px; width:500px;" placeholder="请填写备注">@ViewBag.model.Remarks</textarea>
                </div>
            </div>


            <div class="layui-form-item" style="text-align:center">
                <button class="layui-btn" lay-submit="" lay-filter="btn_update"><i class="layui-icon layui-icon-ok"></i> 确认修改</button>
            </div>
        </form>
    </div>
    <script>
        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form

        });
    </script>
</body>
</html>
