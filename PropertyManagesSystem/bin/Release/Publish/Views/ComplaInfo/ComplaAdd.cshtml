
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateIndex</title>
    <script src="~/Content/Home/myjs/jquery-1.10.2.min.js"></script>
    <script src="~/Content/Home/layui/layui.js"></script>
    <link href="~/Content/Home/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div class="layui-col-md8">
        <form class="layui-form layui-form-pane" lay-filter="form_add" action="/ComplaInfo/Add" method="post">
            <div class="layui-form-item">
                <label class="layui-form-label">类型</label>
                <div class="layui-input-inline">
                    <select name="CompType" id="CompTypeID">
                        <option value=建议 selected="selected">建议</option>
                        <option value=投诉>投诉</option>
                    </select>
                </div>
                <label class="layui-form-label">房屋编号</label>
                <div class="layui-input-inline ">
                    <select name="HousID" id="HousID">
                        @foreach (var item in ViewBag.Hous)
                        {
                            <option value=@item.HousID>@item.HousID</option>
                        }
                    </select>
                </div>
            </div>
            <div class="layui-form-item">

                @*<label class="layui-form-label">业主姓名</label>
            <div class="layui-input-inline ">
                <input type="text" name="UserName" lay-verify="required" class="layui-input">
            </div>*@
                <label class="layui-form-label">联系电话</label>
                <div class="layui-input-inline ">
                    <input type="text" name="Phone" lay-verify="required|phone" class="layui-input">
                </div>
                <label class="layui-form-label">内容</label>
                <div class="layui-input-inline ">
                    <input type="text" name="Contents" lay-verify="required" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">操作员</label>
                <div class="layui-input-inline ">
                    <input type="text" name="AdminName" lay-verify="required" class="layui-input" value="@ViewBag.userName" readonly="readonly" style="color:red;">
                </div>
                <label class="layui-form-label">备注</label>

                <div class="layui-input-inline ">
                    <textarea class="layui-input" name="Remarks" id="RemarksID" placeholder="请填写备注"></textarea>
                </div>
                </div>

                <div class="layui-form-item" style="text-align:center">
                    <button class="layui-btn" lay-submit="" lay-filter="btn_update"><i class="layui-icon layui-icon-ok"></i>   确认添加</button>
                </div>
        </form>
    </div>
    <script>
        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form

        });
    </script>
</body>
</html>
