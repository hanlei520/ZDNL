
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddIndex</title>
    <link href="~/Content/Home/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Content/Home/layui/layui.js"></script>
    <script src="~/Content/Home/myjs/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div class="layui-col-md8">
        <form class="layui-form layui-form-pane" lay-filter="form_add" action="/RoleInfo/Update" method="post">
            <div class="layui-form-item">
                <label class="layui-form-label">角色ID</label>
                <div class="layui-input-inline">
                    <input type="text" name="RoleID" value="@ViewBag.model.RoleID" lay-verify="required" placeholder="请输入" class="layui-input" readonly="readonly" style="color:red;">
                </div>
                <label class="layui-form-label">角色名称</label>
                <div class="layui-input-inline">
                    <input type="text" name="RoleName" value="@ViewBag.model.RoleName" lay-verify="required" placeholder="请输入" class="layui-input">
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">角色描述</label>
                <div class="layui-input-inline">
                    <input type="text" name="Description" value="@ViewBag.model.Description" lay-verify="required" placeholder="请输入" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="text-align:center">
                <button class="layui-btn" lay-submit="" lay-filter="btn_add"><i class="layui-icon layui-icon-ok"></i> 确认修改</button>
            </div>
        </form>
    </div>

    <script>
        //使用layui的form模块
        layui.use(['form'], function () {
            var form = layui.form//实例化


            //自定义验证规则-->value就是文本框里的值
            form.verify({
                maxlength: function (value) {
                    if (value.length > 16) {
                        return '不能超过16个字符';
                    }
                }
            });
        });
    </script>
</body>
</html>

