                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">物业费/月</label>
                <div class="layui-input-inline">
                    <input type="text" name="PropertyCost" lay-verify="required" placeholder="请输入" class="layui-input" value="@ViewBag.model.PropertyCost"readonly="readonly" style="color:red;">
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">缴费月份</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" id="MonthID" name="Month" placeholder="yyyy-MM" readonly="readonly" value="@ViewBag.model.Month">
                    </div>
                </div>
            </div>
