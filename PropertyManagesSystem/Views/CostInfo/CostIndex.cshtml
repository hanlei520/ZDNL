
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/CostInfo/css")
</head>
<body>

    <div class="layui-row layui-form">
        <div class="layui-input-inline layui-col-md1  " style="margin-top:20px;margin-left:20px;">
            <div class="layui-input-inline">
                <input type="text" name="RsubmitDate" id="date1" lay-verify="date" placeholder="开始日期" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-input-inline layui-col-md1  " style="margin-top:20px;margin-left:20px;">
            <div class="layui-input-inline">
                <input type="text" name="RsolveDate" id="date2" lay-verify="date" placeholder="截止日期" autocomplete="off" class="layui-input">
            </div>
        </div>

        <div class="layui-col-md2 " style="margin-left:20px; margin-top:20px;width:150px;">
            <select name="State" id="stateID">
                <option value="">请选择状态</option>
                <option value="True">未缴费</option>
                <option value="False">已缴费</option>
            </select>
        </div>
        <div class="layui-col-md2 " style="margin-left:20px; margin-top:20px;width:150px;"><input type="text" id="txt_Select" placeholder="请输入房屋编号" class="layui-input"></div>
        <div class="layui-col-md1" style="margin-top:20px;"> <button class="layui-btn layui-btn-normal" onclick="btn_search()"><i class="layui-icon">&#xe615;</i>搜索</button></div>
    </div>
    <table class="layui-hide" id="test" lay-filter="test"></table>

    @Scripts.Render("~/CostInfo/js")
    <script type="text/html" id="toolbarDemo">
        <div class="layui-btn-container">
            <button class="layui-btn layui-btn-radius" lay-event="btn_add"><i class="layui-icon">&#xe608;</i>录入</button>
            <button class="layui-btn layui-btn-radius" lay-event="btn_update"><i class="layui-icon">&#xe642;</i>修改</button>
            <button class="layui-btn layui-btn-radius layui-btn-danger" lay-event="btn_delete"><i class="layui-icon"></i>删除</button>

        </div>
    </script>
    <script type="text/html" id="StateTpl">
        {{#  if(d.State == 0){ }}
        <span style="color: #5FB878;">已缴费</span>
        {{#  } else { }}
        <span style="color: #FF5722;">未缴费</span>
        {{#  } }}
    </script>


    <script>

        //使用layui的table模块
        //使用layui的table模块
        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form;
            var layedit = layui.layedit;
            var laydate = layui.laydate;
            //日期
            laydate.render({
                elem: '#date1'
            });
            laydate.render({
                elem: '#date2'
            });
            form.render();
        });
        var table;

        layui.use('table', function () {
            //实例化layui的table模块
            table = layui.table;

            var form = layui.form;

            //渲染表格
            table.render({
                elem: '#test'//把表格渲染在id为test的标签中
                , url: '/CostInfo/GetCostInfo'//数据接口，即后台地址
                , toolbar: '#toolbarDemo' //开启头部工具栏，并为其绑定左侧模板

                , title: '用户数据表'

                , cols: [[
                    { type: 'checkbox', fixed: 'left' }
                    , { field: 'ID', title: 'ID', width: 80, fixed: 'left', unresize: true, sort: true }
                    , { field: 'CostID', title: '费用编号', width: 150 }
                    , { field: 'CostName', title: '费用名称', sort: true }
                    , { field: 'UserName', title: '业主', sort: true }
                    , { field: 'HousID', title: '房屋编号' }
                    , { field: 'RsubmitDate', title: '开始时间', sort: false }
                    , { field: 'RsolveDate', title: '结束时间', sort: false }
                    , { field: 'WaterMeter', title: '水表度数', sort: true }
                    , { field: 'ElectricMete', title: '电表度数', sort: true }
                    , { field: 'WaterPrice', title: '水费单价', sort: true }
                    , { field: 'WirePrice', title: '电费单价', sort: true }
                    , { field: 'SumMoney', title: '总价', sort: true }
                    , { field: 'State', title: '状态', sort: true, templet: '#StateTpl' }
                    , { field: 'Name', title: '录入员', sort: true }
                ]]
                , page: true//是否开启分页
            });

            //头工具栏事件
            table.on('toolbar(test)', function (obj) {
                ;
                var checkStatus = table.checkStatus(obj.config.id);
                switch (obj.event) {
                    case 'btn_add':

                        //iframe窗--弹出添加窗体
                        layer.open({
                            type: 2,//iframe
                            title: '水电费信息添加',
                            shade: 0.6,
                            maxmin: true,
                            shadeClose: true,
                            area: ['100%', '100%'],
                            content: '/CostInfo/CostAdd',//页面地址
                            cancel: function (index) {
                                //关闭窗口
                                layer.close(index);
                                //重新加载表格
                                btn_search();
                            }
                        });
                        $(window).on("resize", function () {
                            layer.full(index);
                        });
                        break;
                    case 'btn_update':
                        ;
                        //获取选中的信息
                        var data = checkStatus.data;
                        if (data.length == 1) {
                            //转成json格式的字符串
                            var strdata = JSON.stringify(data);
                            //转成json对象
                            var jsondata = JSON.parse(strdata);
                            //获取id
                            var id = jsondata[0].ID;
                            //iframe窗--弹出添加窗体
                            layer.open({
                                type: 2,//iframe
                                title: '水电费信息修改',
                                shade: 0.6,
                                maxmin: true,
                                shadeClose: true,
                                area: ['100%', '100%'],
                                content: '/CostInfo/CostUpdate?id=' + id + '',//页面地址
                            });
                            $(window).on("resize", function () {
                                layer.full(index);
                            });
                        } else {
                            layer.alert("必须选中且只能选中一条数据！");
                        }
                        break;
                    case 'btn_delete':
                        //获取选中的信息
                        var data = checkStatus.data;
                        if (data.length <= 0) {
                            layer.alert("必须选中一条数据！");
                        }
                        else {
                            //定义数组对象
                            var mycars = new Array()
                            //转成json格式的字符串
                            var strdata1 = JSON.stringify(data);
                            //转成json对象
                            var jsondata1 = JSON.parse(strdata1);
                            //循环取选中ID
                            for (var i = 0; i < data.length; i++) {
                                //获取id
                                mycars[i] = jsondata1[i].ID;
                            }
                            //执行删除-->调用删除方法
                            if (confirm("确定删除吗？删除将无法恢复！")) {
                                btn_Delete(mycars);
                            }
                        }
                        break;

                };
            });
        });
        layui.use('form', function () {
            var form = layui.form;
            form.render();
        });
        //删除方法
        btn_Delete = function (ID) {
            
            $.ajax({
                type: 'post',
                url: '/CostInfo/Delete',
                data: {
                    id: ID,
                },
                success: function (data) {

                    if (data == "ok") {
                        layer.alert("删除成功！");
                        //重新加载表示
                        btn_search();
                    }
                    else {
                        layer.alert("删除失败！");
                    }

                }
            });
        };

        //密码重置方法
        btn_RePwd = function (ID) {
            
            $.ajax({
                type: 'post',
                url: '/UserInfo/RePwd',
                data: {
                    id: ID,
                },
                success: function (data) {

                    if (data == "ok") {
                        layer.alert("重置成功！");
                        //重新加载表示
                        //btn_search();
                    }
                    else {
                        layer.alert("重置失败！");
                    }

                }
            });
        };

        //查询
        btn_search = function () {
            //获取文本框的值
            
            var RsubmitDate = $("#date1").val();
            var RsolveDate = $("#date2").val();
            if (RsubmitDate == "" && RsolveDate != "") {
                layer.alert('请选择开始时间！');
                return false;
            }
            if (RsolveDate == "" && RsubmitDate != "") {
                layer.alert('请选择结束时间！');
                return false;
            }
            if (RsubmitDate != '' && RsolveDate != '') {
                if (RsubmitDate > RsolveDate) {
                    layer.alert('结束时间不能小于开始时间！');
                    return false;
                }
            }
            var selectInfo = $("#txt_Select").val();
            $("#stateID").val();//获取当前选择项的值.
            var options = $("#stateID option:selected");//获取当前选择项.
            var stateID = options.val();//获取当前选择项的值.
            //把文本框的值通过layui table的reload重新传给后台并重新加载表格
            table.reload('test', {
                url: '/CostInfo/GetCostInfo',
                page: {
                    curr: 1//从第一页开始
                },
                where: {
                    RsubmitDate: RsubmitDate,
                    RsolveDate: RsolveDate,
                    State: stateID,
                    selectInfo: selectInfo,//设定异步数据接口的额外参数
                }
            });
        };

    </script>
</body>
</html>

